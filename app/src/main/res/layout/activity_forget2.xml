<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forget2"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/head"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تم إرسال الرابط بنجاح"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="27sp"
        android:layout_marginTop="20sp"
        />

    <TextView
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="يُرجى التحقق من بريدك الإلكتروني لإنشاء كلمة مرور جديدة"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="Rest"
        android:textColor="@color/purple_200"
        android:text="لم تتلق الرسالة أعد الإرسال" />
    <RelativeLayout
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:background="@drawable/button"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:textSize="19sp"
        android:id="@+id/butrestpas"
        android:onClick="login"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="تسحيل دخول"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
